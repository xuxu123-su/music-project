page {
  color: #fff;
}

.image,
.cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.cover {
  background: rgba(0, 0, 0, .5);
  backdrop-filter: blur(50rpx);
}

/* 自定义导航 */
.tab {
  display: flex;
  font-size: 28rpx;
  color: #999;
}

.divider {
  border-right: 1rpx solid #999;
  padding: 0 20rpx;
}

.divider:last-child {
  border-right: 0 !important;
}

.active {
  color: #fff;
}

/* 歌曲 */
.content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 60rpx;
}

/* 背景图 */
.bg {
  flex: 5;
  position: relative;
  border-radius: 20rpx;
  padding: 50rpx;
  background: -webkit-linear-gradient(#e8ecf7, #cbd1e7);
  background: -o-linear-gradient(#e8ecf7, #cbd1e7);
  background: -moz-linear-gradient(#e8ecf7, #cbd1e7);
  background: linear-gradient(#e8ecf7, #cbd1e7);
}

.one {
  position: absolute;
  top: 25rpx;
  left: 25rpx;
}

.two {
  position: absolute;
  top: 25rpx;
  right: 25rpx;
}

.three {
  position: absolute;
  bottom: 25rpx;
  left: 25rpx;
}

.four {
  position: absolute;
  bottom: 25rpx;
  right: 25rpx;
}

