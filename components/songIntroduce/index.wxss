.header {
  width: 100vw;
  position: relative;
  display: flex;
  flex-direction: column;
  height: 420rpx;
  color: #fff;
}

.header .bg-image {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header .bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}

.content {
  display: flex;
  margin-top: 60rpx;
  padding: 0 50rpx;
}

.content .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}

.content .play {
  position: absolute;
  min-width: 110rpx;
  top: 69rpx;
  left: 144rpx;
  text-align: center;
  background: rgba(0,0,0,.5);
  border-radius: 20rpx;
  font-size: 18rpx;
  padding: 5rpx;
}

.content .title {
  height: 80rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.content .info {
  position: relative;
  height: 220rpx;
  flex: 1;
  margin-left: 50rpx;
}

.content .anthor {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.content .anthor .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.content .anthor .nickname {
  font-size: 24rpx;
  margin-left: 18rpx;
}

.content .info .desc {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.operation {
  display: flex;
  justify-content: space-around;
  width: 70%;
  background-color: #fff;
  padding: 16rpx 30rpx;
  margin: 30rpx auto;
  color: #000;
  border-radius: 50rpx;
}

.operation .item {
  display: flex;
  flex: 1;
  align-items: center;
  border-right: 1rpx solid #ccc;
}

.operation .item:last-of-type {
  border-right: none;
}

.operation .icon {
  margin-left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
}

.operation .item .text {
  font-size: 26rpx;
  margin-left: 10rpx;
}
